<style>
  /* Page Layout */
  .playground-page {
    padding-top: 120px;
    padding-bottom: 80px;
    min-height: 100vh;
  }

  /* Logo */
  .logo {
    position: fixed;
    top: 30px;
    left: 30px;
    z-index: 100;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo-text {
    font-family: "Playfair Display", serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-orange);
    letter-spacing: 0.05em;
  }

  /* Page Header */
  .playground-header {
    position: relative;
    text-align: center;
    margin-bottom: 60px;
    padding: 0 20px;
  }

  .playground-header h1 {
    font-family: "Playfair Display", serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-dark);
    margin: 0;
  }

  /* Filter Dropdown */
  .filter-dropdown {
    position: fixed;
    top: 30px;
    right: 30px;
    z-index: 100;
  }

  .filter-toggle {
    background: var(--white);
    border: 2px solid var(--primary-orange);
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--primary-orange);
    box-shadow: 0 2px 10px rgba(217, 109, 43, 0.1);
  }

  .filter-toggle:hover {
    background: var(--primary-orange);
    color: var(--white);
    transform: rotate(90deg);
  }

  .filter-toggle.active {
    background: var(--primary-orange);
    color: var(--white);
    transform: rotate(90deg);
  }

  .filter-menu {
    position: absolute;
    top: calc(100% + 10px);
    right: 0;
    background: var(--white);
    border: 2px solid var(--primary-orange);
    border-radius: 12px;
    min-width: 200px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .filter-menu.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .filter-option {
    padding: 12px 20px;
    cursor: pointer;
    transition: all 0.2s ease;
    color: var(--text-dark);
    font-size: 0.95rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(217, 109, 43, 0.1);
  }

  .filter-option:last-child {
    border-bottom: none;
  }

  .filter-option:hover {
    background: rgba(217, 109, 43, 0.05);
    padding-left: 25px;
  }

  .filter-option.active {
    background: var(--primary-orange);
    color: var(--white);
    font-weight: 600;
  }

  .filter-option .count {
    font-size: 0.85rem;
    opacity: 0.7;
  }

  /* Playground Content */
  .playground-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* Playground Grid */
  .playground-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    grid-auto-flow: dense;
  }

  /* Grid Items */
  .grid-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--white);
    aspect-ratio: 4/3;
  }

  .grid-item.hidden {
    display: none;
  }

  .grid-item:hover {
    transform: translateY(-8px);
    box-shadow: var(--card-shadow-hover);
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .grid-item:hover img {
    transform: scale(1.1);
  }

  /* Grid Item Overlay */
  .grid-item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px 20px 20px;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.7) 50%,
      transparent 100%
    );
    color: var(--white);
    transform: translateY(0);
    transition: all 0.4s ease;
  }

  .grid-item:hover .grid-item-overlay {
    padding-bottom: 30px;
  }

  .grid-item-overlay .category {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--secondary-orange);
    margin-bottom: 8px;
    font-weight: 600;
  }

  .grid-item-overlay h3 {
    font-family: "Playfair Display", serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 8px 0;
    color: var(--white);
  }

  .grid-item-overlay p {
    font-size: 0.9rem;
    margin: 0;
    opacity: 0.9;
    line-height: 1.5;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .playground-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 25px;
    }

    .playground-content {
      padding: 0 30px;
    }
  }

  @media (max-width: 768px) {
    .playground-page {
      padding-top: 100px;
      padding-bottom: 100px;
    }

    .logo {
      top: 20px;
      left: 20px;
    }

    .logo-text {
      font-size: 1.5rem;
    }

    .filter-dropdown {
      top: 20px;
      right: 20px;
    }

    .filter-toggle {
      width: 42px;
      height: 42px;
    }

    .playground-header h1 {
      font-size: 2.5rem;
    }

    .playground-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
    }

    .playground-content {
      padding: 0 20px;
    }

    .grid-item-overlay h3 {
      font-size: 1.25rem;
    }

    .grid-item-overlay p {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .playground-header h1 {
      font-size: 2rem;
    }

    .playground-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .grid-item {
      aspect-ratio: 3/4;
    }

    .filter-toggle {
      width: 34px;
      height: 34px;
    }

    .filter-toggle svg {
      width: 15px;
      height: 15px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const filterToggle = document.getElementById("filterToggle");
    const filterMenu = document.getElementById("filterMenu");
    const gridItems = document.querySelectorAll(".grid-item");
    let currentFilterOptions: HTMLElement[] = [];
    let currentFilter = "all";

    // Function to generate dynamic filter options
    function generateDynamicFilters() {
      // Get all unique categories from grid items
      const categories = new Set<string>();

      gridItems.forEach((item) => {
        const categoryElement = item.querySelector(".category");
        if (categoryElement) {
          const categoryName = categoryElement.textContent?.trim();
          if (categoryName) {
            categories.add(categoryName);
          }
        }
      });

      // Clear existing options
      if (filterMenu) {
        filterMenu.innerHTML = "";
      }
      currentFilterOptions = [];

      // Create "All Projects" option
      const allOption = document.createElement("div");
      allOption.className = "filter-option active";
      allOption.setAttribute("data-filter", "all");
      allOption.innerHTML = `All Projects <span class="count">(${gridItems.length})</span>`;
      filterMenu?.appendChild(allOption);
      currentFilterOptions.push(allOption);

      // Create category options (sorted alphabetically)
      const sortedCategories = Array.from(categories).sort();
      sortedCategories.forEach((category) => {
        // Count items for this category
        let count = 0;
        gridItems.forEach((item) => {
          const categoryElement = item.querySelector(".category");
          if (
            categoryElement &&
            categoryElement.textContent?.trim() === category
          ) {
            count++;
          }
        });

        const option = document.createElement("div");
        option.className = "filter-option";
        option.setAttribute("data-filter", category);
        option.innerHTML = `${category} <span class="count">(${count})</span>`;
        filterMenu?.appendChild(option);
        currentFilterOptions.push(option);
      });

      // Add click event listeners to options
      currentFilterOptions.forEach((option) => {
        option.addEventListener("click", handleFilterClick);
      });
    }

    // Toggle dropdown
    filterToggle?.addEventListener("click", (e) => {
      e.stopPropagation();
      filterToggle.classList.toggle("active");
      filterMenu?.classList.toggle("open");
    });

    // Close dropdown when clicking outside
    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      if (
        filterToggle &&
        filterMenu &&
        !filterToggle.contains(target) &&
        !filterMenu.contains(target)
      ) {
        filterToggle.classList.remove("active");
        filterMenu.classList.remove("open");
      }
    });

    // Filter selection handler
    function handleFilterClick(event: Event) {
      const option = (event.target as HTMLElement).closest(".filter-option") as HTMLElement;
      if (!option) return;

      const filterValue = option.getAttribute("data-filter");
      currentFilter = filterValue || "all";

      // Update active states
      currentFilterOptions.forEach((opt) => opt.classList.remove("active"));
      option.classList.add("active");

      // Close dropdown
      filterToggle?.classList.remove("active");
      filterMenu?.classList.remove("open");

      // Apply filter
      gridItems.forEach((item) => {
        if (filterValue === "all") {
          item.classList.remove("hidden");
        } else {
          // Check if the item matches the filter category
          const categoryElement = item.querySelector(".category");
          if (
            categoryElement &&
            categoryElement.textContent?.trim() === filterValue
          ) {
            item.classList.remove("hidden");
          } else {
            item.classList.add("hidden");
          }
        }
      });
    }

    // Note: Grid items are displayed as a static gallery.
    // Individual project detail pages are available at /projects/* for select items.

    // Initialize filter system
    generateDynamicFilters();
  });
</script>
